#Login
  %header.LoginHead
    .LoginHead__logo
      = link_to image_tag("logo.png", alt: "FURIMA"), root_path
  %main.LoginBox
    .LoginBlock
      .Noaccount
        %p
          アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_user_registration_path
      .Form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .Form__field
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
          .Form__field
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
          .Form__actions
            = f.submit "ログイン"
  %footer.LoginFoot
    .LoginFoot__area
      %ul.LoginFoot__text
        %li
          プライバシーポリシー
        %li
          FURIMA利用規約
        %li
          特定商取引に関する表記
      .LoginFoot__logo
        = link_to image_tag("logo.png", alt: "FURIMA"), root_path
      .LoginFoot__copyright
        &copy;FURIMA, Inc